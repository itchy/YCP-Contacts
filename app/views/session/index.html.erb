<div class='login'>
	<br />
	<%= form_for :user, :url => session_login_path do |f| %>
		<div class='labels'>		
		  <%= f.label :login, 'Login' %>:<br />
			<%= f.label :password, 'Pasword' %>:
		</div>
		<div class="fields">		
		  <%= f.text_field :login %><br />
		  <%= f.password_field :password %>			
		</div>
		<div class="grid_2 alpha omega">
			<%= f.submit %>
		</div>	  
	<% end %>
</div>
<br />

